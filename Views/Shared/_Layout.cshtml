                            "RICHARDSON, BILL [DEM]",
                            "DODD, CHRISTOPHER J [DEM]",
                            "HUCKABEE, MIKE [REP]"
                        ],
                datasets: [
                    {
                        label: "Total funds raised (USD)",
                        backgroundColor: [
                                            "#0066cc", 
                                            "#e60000", 
                                            "#0066cc", 
                                            "#e60000",
                                            "#e60000",
                                            "#0066cc",
