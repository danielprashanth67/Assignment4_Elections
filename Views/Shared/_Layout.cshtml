                            "PAUL, RAND [REP]",
                            "FIORINA, CARLY [REP]"
                        ],
                datasets: [
                    {
                        label: "Total funds raised (USD)",
                        backgroundColor: [
                                            "#0066cc", 
                                            "#e60000", 
                                            "#0066cc", 
                                            "#e60000",
                                            "#e60000",
                                            "#e60000",
                                            "#e60000",
                                            "#e60000",
                                            "#e60000",
                                            "#e60000"
                                        ],
                        data: [ 
                                585699061,
                                350668435,
                                237640609, 
                                94338654,
                                65091035,
                                48331861,
                                35491191,
                                19692691,
                                12458992,
                                12211897
                            ]
                    }
                ]
                },
                options: {
                    legend: { display: false },
                    title: {
                    display: true,
                    text: 'Total Funds Raised'
                }
            }
        });


        // data for the Donut Chart
        data2008 = {
            datasets: [{
                backgroundColor: ["#0066cc", "#e60000"],
