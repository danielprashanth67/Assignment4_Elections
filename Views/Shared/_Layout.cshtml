            // Options for this Donut Chart
            options: {
                title: {
                    display: true,
                    text: 'Top 10 by Party (in % of total)'
                }
            }
        });


        // Horizontal Bar Chart
        new Chart(document.getElementById("horizontalBarChart2008"), {
            type: 'horizontalBar',
            data: {
                labels: [
                            "OBAMA, BARACK [DEM]", 
                            "MCCAIN, JOHN S. [REP]", 
